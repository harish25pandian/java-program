import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int a = scanner.nextInt();
        int b = a;

  
        int sum = 0;
        while (a > 0) {
            sum += a % 10;
            a /= 10;
        }

      
        if (b % sum == 0) {
            System.out.println("Harshad Number");
        } else {
            System.out.println("Not Harshad Number");
        }


    }
}
